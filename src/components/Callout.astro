---
interface Props {
  type: 'prompt' | 'takeaway';
  label?: string;
}

const { type, label } = Astro.props;

const config = {
  prompt: {
    label: 'Prompt',
    colors: {
      bg: 'bg-pink-50 dark:bg-pink-950/20',
      border: 'border-pink-200 dark:border-pink-800/50',
      text: 'text-pink-700 dark:text-pink-300',
      icon: 'text-pink-600 dark:text-pink-400',
      contentBg: 'bg-pink-50/50 dark:bg-pink-950/10',
      codeBg: 'rgba(236, 72, 153, 0.1)',
      codeColor: '#be185d',
      codeBgDark: 'rgba(236, 72, 153, 0.2)',
      codeColorDark: '#f9a8d4',
    },
    iconPath: 'M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z',
  },
  takeaway: {
    label: 'Takeaway',
    colors: {
      bg: 'bg-blue-50 dark:bg-blue-950/20',
      border: 'border-blue-200 dark:border-blue-800/50',
      text: 'text-blue-700 dark:text-blue-300',
      icon: 'text-blue-600 dark:text-blue-400',
      contentBg: 'bg-blue-50/50 dark:bg-blue-950/10',
      codeBg: 'rgba(59, 130, 246, 0.1)',
      codeColor: '#1e40af',
      codeBgDark: 'rgba(59, 130, 246, 0.2)',
      codeColorDark: '#93c5fd',
    },
    iconPath: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  },
};

const theme = config[type];
const displayLabel = label || theme.label;
---

<div class={`callout-wrapper callout-${type} not-prose my-6`}>
  <div class={`callout-header flex items-center gap-2 px-4 py-2 ${theme.colors.bg} border-b ${theme.colors.border} rounded-t-lg`}>
    <svg class={`w-4 h-4 ${theme.colors.icon}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={theme.iconPath}></path>
    </svg>
    <span class={`text-sm font-medium ${theme.colors.text} uppercase tracking-wide`}>{displayLabel}</span>
  </div>
  <div class={`callout-content px-4 py-3 ${theme.colors.contentBg} border ${theme.colors.border} border-t-0 rounded-b-lg`}>
    <div class="callout-text text-gray-800 dark:text-gray-200 leading-relaxed">
      <slot />
    </div>
  </div>
</div>

<style>
  .callout-wrapper {
    border-radius: 0.5rem;
  }
  
  .callout-content :global(p) {
    margin: 0;
  }
  
  .callout-content :global(p + p) {
    margin-top: 0.75rem;
  }
  
  .callout-content :global(strong) {
    color: #1f2937;
    font-weight: 600;
  }
  
  .dark .callout-content :global(strong) {
    color: #f3f4f6;
  }
  
  .callout-content :global(code) {
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  }
  
  .callout-prompt .callout-content :global(code) {
    background-color: rgba(236, 72, 153, 0.1);
    color: #be185d;
  }
  
  .dark .callout-prompt .callout-content :global(code) {
    background-color: rgba(236, 72, 153, 0.2);
    color: #f9a8d4;
  }
  
  .callout-takeaway .callout-content :global(code) {
    background-color: rgba(59, 130, 246, 0.1);
    color: #1e40af;
  }
  
  .dark .callout-takeaway .callout-content :global(code) {
    background-color: rgba(59, 130, 246, 0.2);
    color: #93c5fd;
  }
</style>
