---
interface Props {
  label?: string;
}

const { label = "Prompt" } = Astro.props;

const slotContent = await Astro.slots.render('default');
---

<div class="prompt-wrapper not-prose my-6">
  <div class="prompt-header flex items-center gap-2 px-4 py-2 bg-pink-50 dark:bg-pink-950/20 border-b border-pink-200 dark:border-pink-800/50 rounded-t-lg">
    <svg class="w-4 h-4 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
    </svg>
    <span class="text-sm font-medium text-pink-700 dark:text-pink-300 uppercase tracking-wide">{label}</span>
  </div>
  <div class="prompt-content px-4 py-3 bg-pink-50/50 dark:bg-pink-950/10 border border-pink-200 dark:border-pink-800/50 border-t-0 rounded-b-lg">
    <div class="prompt-text text-gray-800 dark:text-gray-200 leading-relaxed">
      <slot />
    </div>
  </div>
</div>

<style>
  .prompt-wrapper {
    border-radius: 0.5rem;
  }
  
  .prompt-content :global(p) {
    margin: 0;
  }
  
  .prompt-content :global(p + p) {
    margin-top: 0.75rem;
  }
  
  .prompt-content :global(strong) {
    color: #1f2937;
    font-weight: 600;
  }
  
  .dark .prompt-content :global(strong) {
    color: #f3f4f6;
  }
  
  .prompt-content :global(code) {
    background-color: rgba(236, 72, 153, 0.1);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: #be185d;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  }
  
  .dark .prompt-content :global(code) {
    background-color: rgba(236, 72, 153, 0.2);
    color: #f9a8d4;
  }
</style>
