---
interface Props {
  label?: string;
}

const { label = "Takeaway" } = Astro.props;

const slotContent = await Astro.slots.render('default');
---

<div class="takeaway-wrapper not-prose my-6">
  <div class="takeaway-header flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-950/20 border-b border-blue-200 dark:border-blue-800/50 rounded-t-lg">
    <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>
    <span class="text-sm font-medium text-blue-700 dark:text-blue-300 uppercase tracking-wide">{label}</span>
  </div>
  <div class="takeaway-content px-4 py-3 bg-blue-50/50 dark:bg-blue-950/10 border border-blue-200 dark:border-blue-800/50 border-t-0 rounded-b-lg">
    <div class="takeaway-text text-gray-800 dark:text-gray-200 leading-relaxed">
      <slot />
    </div>
  </div>
</div>

<style>
  .takeaway-wrapper {
    border-radius: 0.5rem;
  }
  
  .takeaway-content :global(p) {
    margin: 0;
  }
  
  .takeaway-content :global(p + p) {
    margin-top: 0.75rem;
  }
  
  .takeaway-content :global(strong) {
    color: #1f2937;
    font-weight: 600;
  }
  
  .dark .takeaway-content :global(strong) {
    color: #f3f4f6;
  }
  
  .takeaway-content :global(code) {
    background-color: rgba(59, 130, 246, 0.1);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: #1e40af;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  }
  
  .dark .takeaway-content :global(code) {
    background-color: rgba(59, 130, 246, 0.2);
    color: #93c5fd;
  }
</style>
