---
import Layout from './Layout.astro';
import NewsletterForm from '../components/NewsletterForm.tsx';
import Reactions from '../components/Reactions.tsx';

/**
 * PostLayout component for rendering resources
 * @param entry - The resource entry from Astro content collections
 * @param entry.data - Resource metadata (title, description, pubDate, author, tags)
 */
interface Props {
  entry: {
    data: {
      title: string;
      description: string;
      pubDate: Date;
      author: string;
      tags: string[];
    };
  };
  slug: string;
}

const { entry, slug } = Astro.props;
---

<Layout>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <a 
        href="/" 
        class="text-sm font-medium text-sky-600 dark:text-sky-400 hover:text-sky-700 dark:hover:text-sky-300 mb-6 inline-block transition-colors"
      >
        ← Back to resources
      </a>
      
      <h1 class="article-title text-4xl font-serif font-medium mb-4 leading-tight text-gray-800 dark:text-gray-100">
        {entry.data.title}
      </h1>
      
      <div class="flex flex-wrap gap-2 mb-6">
        {entry.data.tags.map((tag: string) => (
          <span class="text-xs px-2 py-1 bg-pink-50 dark:bg-pink-900/30 text-pink-600 dark:text-pink-400 rounded-full">
            {tag}
          </span>
        ))}
      </div>
      
      <div class="text-sm text-gray-400 dark:text-gray-500 mb-6 flex items-center gap-3">
        <span>{entry.data.author}</span>
        <span>•</span>
        <time datetime={entry.data.pubDate.toISOString()}>
          {entry.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>
      
      <p class="text-lg leading-relaxed text-gray-600 dark:text-gray-300 border-l-2 border-pink-300 dark:border-pink-700 pl-6 italic">
        {entry.data.description}
      </p>
    </header>
    
    <!-- AI Transparency Note -->
    <div class="my-8 px-4 py-3 bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-400 dark:border-blue-600 rounded-r">
      <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed m-0">
        <span class="font-medium text-blue-700 dark:text-blue-400">✍️ Writing Process:</span> 
        This post was fully planned in advance using structured notes and a detailed outline. AI was used as a writing assistant to turn that plan into a clearer, more readable document. The ideas, structure, and direction were entirely human-defined.
      </p>
    </div>
    
    <div class="prose dark:prose-invert">
      <slot />
    </div>
    
    <!-- Reactions & Share Section -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <!-- Reactions -->
      <Reactions slug={slug} client:load />
      
      <!-- Share -->
      <h3 class="text-lg font-serif font-medium text-gray-800 dark:text-gray-100 mb-4">Share this resource</h3>
      <div class="flex flex-wrap gap-3">
        <button
          onclick="navigator.share ? navigator.share({title: document.title, url: window.location.href}) : window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(window.location.href)}&text=${encodeURIComponent(document.title)}`, '_blank')"
          class="inline-flex items-center gap-2 px-4 py-2 bg-black hover:bg-gray-800 dark:bg-white dark:hover:bg-gray-100 text-white dark:text-black text-sm font-medium rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          X
        </button>
        
        <button
          onclick="window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(window.location.href)}`, '_blank')"
          class="inline-flex items-center gap-2 px-4 py-2 bg-[#0A66C2] hover:bg-[#004182] text-white text-sm font-medium rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </button>
        
        <button
          onclick="window.open(`https://wa.me/?text=${encodeURIComponent(document.title + ' ' + window.location.href)}`, '_blank')"
          class="inline-flex items-center gap-2 px-4 py-2 bg-[#25D366] hover:bg-[#1da851] text-white text-sm font-medium rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          WhatsApp
        </button>
        
        <button
          onclick="window.open(`https://reddit.com/submit?url=${encodeURIComponent(window.location.href)}&title=${encodeURIComponent(document.title)}`, '_blank')"
          class="inline-flex items-center gap-2 px-4 py-2 bg-[#FF4500] hover:bg-[#cc3700] text-white text-sm font-medium rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
          </svg>
          Reddit
        </button>
        
        <button
          onclick="navigator.clipboard.writeText(window.location.href).then(() => { const btn = this; const originalContent = btn.innerHTML; btn.innerHTML = '<svg class=\'w-4 h-4\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M5 13l4 4L19 7\'></path></svg><span>Copied!</span>'; btn.classList.remove('bg-gray-100', 'hover:bg-gray-200', 'dark:bg-gray-800', 'dark:hover:bg-gray-700', 'text-gray-700', 'dark:text-gray-300'); btn.classList.add('bg-green-600', 'text-white'); setTimeout(() => { btn.innerHTML = originalContent; btn.classList.remove('bg-green-600', 'text-white'); btn.classList.add('bg-gray-100', 'hover:bg-gray-200', 'dark:bg-gray-800', 'dark:hover:bg-gray-700', 'text-gray-700', 'dark:text-gray-300'); }, 2000); })"
          class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          Copy link
        </button>
      </div>
    </div>
    
    <!-- Newsletter Section -->
    <NewsletterForm headingLevel="h3" showTopBorder={true} client:load />
  </article>
</Layout>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap');
  
  .article-title {
    font-family: 'Merriweather', serif;
  }
  
  .prose h1 {
    font-family: 'Merriweather', serif;
    font-size: 2rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  
  .dark .prose h1 {
    color: #e5e7eb;
  }
  
  .prose h2 {
    font-family: 'Merriweather', serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }
  
  .dark .prose h2 {
    color: #e5e7eb;
  }
  
  .prose h3 {
    font-family: 'Merriweather', serif;
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  .dark .prose h3 {
    color: #e5e7eb;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
    color: #4b5563;
  }
  
  .dark .prose p {
    color: #d1d5db;
  }
  
  .prose ul {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1.25rem;
  }
  
  .prose ul li {
    margin-bottom: 0.5rem;
    color: #4b5563;
  }
  
  .dark .prose ul li {
    color: #d1d5db;
  }
  
  .prose ol {
    list-style-type: decimal;
    list-style-position: inside;
    margin-bottom: 1.25rem;
  }
  
  .prose ol li {
    margin-bottom: 0.5rem;
    color: #4b5563;
  }
  
  .dark .prose ol li {
    color: #d1d5db;
  }
  
  .prose li {
    margin-left: 1rem;
  }
  
  .prose code {
    background-color: #f9fafb;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: #ec4899;
  }
  
  .dark .prose code {
    background-color: #1e293b;
    color: #f9a8d4;
  }
  
  .prose pre {
    background-color: #f9fafb;
    padding: 1.25rem;
    border-radius: 0.375rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
    border: 1px solid #e5e7eb;
  }
  
  .dark .prose pre {
    background-color: #1e293b;
    border-color: #334155;
  }
  
  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: #374151;
  }
  
  .dark .prose pre code {
    color: #e5e7eb;
  }
  
  .prose blockquote {
    border-left: 3px solid #fbcfe8;
    padding-left: 1.25rem;
    font-style: italic;
    margin: 1.5rem 0;
    color: #6b7280;
  }
  
  .dark .prose blockquote {
    border-left-color: #9333ea;
    color: #9ca3af;
  }
  
  .prose a {
    color: #ec4899;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .dark .prose a {
    color: #f9a8d4;
  }
  
  .prose a:hover {
    color: #db2777;
  }
  
  .dark .prose a:hover {
    color: #fbcfe8;
  }
  
  .prose strong {
    font-weight: 600;
    color: #374151;
  }
  
  .dark .prose strong {
    color: #f3f4f6;
  }
  
  .prose hr {
    border: 0;
    border-top: 1px solid #e5e7eb;
    margin: 2.5rem auto;
    max-width: 90%;
  }
  
  .dark .prose hr {
    border-top-color: #374151;
  }
</style>